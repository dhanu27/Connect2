<div id="comment-list-container-<%=i._id%>">
    <%for(comment of i.comments){%>
     <div class="comment-container" id="comment-<%= comment._id%>">
      <div class="detail"><%= comment.user.name%>
      <% if(locals.user && comment.user.id==locals.user.id){%>  
       <div><a href="/comment/destroy/<%= comment._id%>" class="comment-delete-bttn">X</a></div> 
       <%}%> 
      </div>
       <div class="content"><%= comment.content%></div>
       <% if(locals.user){%>
        <a href="/like/toggle/?id=<%= comment._id%>&type=comment" class="like-bttn" data-likes="<%= comment.likes.length %>"><i class="fa fa-thumbs-up lightgrey"></i><%= comment.likes.length%> likes</a>
        <%}else{%>
          <%= comment.likes.length%> likes
          <%}%>
     </div>
    <%}%> 
</div>  