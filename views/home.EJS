<title>
  <%=title%>
</title> 
<section id="post-feed">
  <h1>Posts</h1>
    <% if(locals.user){%>          
        <form action="/posts/create-post" method="POST">
          <textarea rows="5" placeholder="Type here ..."name="content"></textarea>
          <button type="submit" > Post</button>
        </form>
      <%}%> 
        <div id="post-list-container">
            <% for(i of post){%>

              <div class="post-container">
                  <div class="post-detail"> 
                    <%= i.user.name%>
                  </div> 
                  <div class="post-content"> 
                    <%= i.content%>
                  </div>  
              </div>
              <%}%>
        </div>  
  </section>