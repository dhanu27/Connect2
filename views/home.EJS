<title>
  <%=title%>
</title> 
<section id="post-feed">
  <h1>Posts</h1>
    <% if(locals.user){%>          
        <form action="/posts/create-post" method="POST" id="post-form">
          <textarea rows="5" placeholder="Type here ..."name="content" required></textarea>
          <button type="submit" > Post</button>
        </form>
      <%}%> 
     <%-include('post')-%>
      
  </section>
<section id="friends-list">
  <h1>Friends</h1>
  <div class=friends-container>
     <div class="friend">
        <% for(friend of allusers){%>
           <div><a href="/users/profile/<%= friend.id%>"><%=friend.name %></a></div>
         <%}%> 
     </div>
  </div>

</section>  
<script src="/js/home_post.js"></script>